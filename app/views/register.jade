extends layout.jade

block content
  .container
    .row
      .span4.offset4.well
        legend Inscription
        if message
          .alert.alert-danger #{message}
        form#register-form(method='POST', action='/register', accept-charset='UTF-8')
          input#username.span4(type='text', name='username', placeholder='Pseudo' required)
          input#email.span4(type='email', name='email', placeholder='Email' required)
          input#password.span4(type='password', name='password', placeholder='Mot de passe' required)
          button.btn.btn-info.btn-block(type='submit', name='submit') S'inscrire