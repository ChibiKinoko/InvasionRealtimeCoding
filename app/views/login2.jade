extends layout.jade

block content
  .container
    .row
      .span4.offset4.well
        legend Connexion
        if message
          .alert.alert-danger #{message}
        form#login-form(method='POST', action='/login', accept-charset='UTF-8')
          input#username.span4(type='text', name='username', placeholder='Pseudo')
          input#password.span4(type='password', name='password', placeholder='Mot de passe')
          button.btn.btn-info.btn-block(type='submit', name='submit') Se connecter